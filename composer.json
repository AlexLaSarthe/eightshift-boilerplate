{
  "require-dev": {
    "infinum/coding-standards-wp": "0.4.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5"
  },
  "require": {
    "infinum/eightshift-libs": "dev-develop"
  },
  "repositories": [
    {
        "type": "git",
        "url":  "git@github.com:infinum/eightshift-libs.git"
    }
  ],
  "autoload": {
    "classmap": [
      "src"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "check-cs": "@php ./vendor/bin/phpcs",
    "fix-cs": "@php ./vendor/bin/phpcbf"
  }
}
